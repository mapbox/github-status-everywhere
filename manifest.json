{
    "manifest_version": 2,
    "name": "GitHub Commit Status",
    "version": "0.2",
    "description": "Displays commit status next to SHAs on GitHub",
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_title": "GitHub Commit Status",
        "default_popup": "popup.html"
    },
    "content_security_policy": "default-src 'self' ",
    "minimum_chrome_version": "14.0.835.202",
    "options_page": "options.html",
    "background": {
            "page": "background.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*.github.com/*",
                "https://*.github.com/*",
                "http://*.github.tagged.com/*",
                "https://*.github.tagged.com/*"
            ],
            "css": [
                "styles/inject.css"
            ],
            "js": [
                "javascripts/ext/jquery.min.js",
                "javascripts/ext/URI.min.js",
                "javascripts/ext/underscore.min.js",
                "javascripts/ext/underscore.string.min.js",
                "javascripts/inject.js"
            ]
        }
    ],
    "permissions": [
        "tabs"
    ]
}
